<head>
    <link rel="stylesheet" href="/stylesheets/home.css">
    <title>Home</title> 
  </head>
 <header>
    <%-include('./partials/header')%>
 </header>
 <body>
 <main>   <% for (let i = 0; i<resultados.length; i++) { %> 
        <div class="uk-section uk-section-small" class="">
            <div class="uk-container uk-container-large uk-flex">
                <section id="posts" class="uk-flex uk-flex-middle uk-flex-center uk-flex-column uk-child-width-1-2 uk-width-1-1">
                    <article class="post uk-card-default uk-flex uk-flex-column">
                     
                             <div class="info-usuario uk-flex ">
                           
                            <div>
                                 
                                <img src="<%= resultados[i].user.perfil  %>" width="100px">
                            </div>
                            
                            <h4><a href="/info/esp/<%=resultados[i].user_id %>"><%= resultados[i].user.username%></a></h4>
                            
                        </div>
                        <div class="post-body uk-flex uk-flex-center">
                            <img src="<%= resultados[i].url_imagen  %>" alt="">
                        </div>
                        <div class="post-reacciones">
                            <ul class="post-icons uk-flex uk-flex-between">
                                <li><span class="" uk-icon="icon:heart; ratio: 1.3"></span>
                                </li>
                                <li><span class="" uk-icon="icon:comments; ratio: 1.3"></span>
                                </li>
                            </ul>
                            <div class="post-pie uk-flex">
                                <h5 class="uk-width-1-6"><%= resultados[i].user.username %></h5>
                                <p class="uk-width-5-6"><%= resultados[i].texto %></p>
                            </div>
                        </div>
                        <div class="post-comentarios">
                            <h6>Comentarios</h6> 
                            <ul>
                            <% if (resultados[i].comments.length != 0) {
                                for (let x = 0; x<resultados[i].comments.length; x++) { %>
                           
                                <li>
                                    <a href="/info/esp/<%=resultados[i].comments[x].user_id %>"><%= resultados[i].comments[x].user.username%> </a>
                                    <p><%=resultados[i].comments[x].comentario %></p>
                                </li>
                                <% } } %>
                                <a href="post/detalle/<%=resultados[i].id %>">Ver m√°s...</a>
                           
                            
                            
                       </ul>  
                        </div>
                     
                    </article> 
                    
            </section>
        </div>
    </div><% } %>   
</main>
<footer>
    <%-include('./partials/footer')%>
</footer>

</body>
